[database]
backend=<%= @sql_backend %>

# SQL Connection
connection=mysql://<%= "#{@mysql_user}:#{@mysql_password}@#{@mysql_host}/#{@mysql_db}" %>
max_retries=<%= @sql_max_retries %>
retry_interval=<%= @sql_retry_interval %>

<% if node["heat"]["sql"]["slave"]["enabled"] -%>
# The SQL SALVE Connection
slave_connection=<%= @slave_db_type %>://<%= "#{@slave_user}:#{@slave_password}@#{@slave_host}/#{@slave_db}" %>
<% end -%>
