[heat_api_cloudwatch]
bind_host=<%= @heat_api_cloudwatch_host %>
bind_port=<%= @heat_api_cloudwatch_port %>
backlog=<%= @heat_api_cloudwatch_backlog %>
workers=<%= @heat_api_cloudwatch_workers %>
<% if node["heat"]["ssl"]["enabled"] || @heat_api_cloudwatch_scheme == "https" -%>
cert_file=<%= @heat_api_cloudwatch_cert %>
key_file=<%= @heat_api_cloudwatch_key %>
<% end -%>